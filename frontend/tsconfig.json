{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "verbatimModuleSyntax": false,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "#imports": [
        "./.nuxt/imports"
      ]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/i18n",
      "@nuxtjs/auth-next",
      "@nuxtjs/vuetify",
      "@types/sortablejs"
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "include": [
    "**/*",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
